              "schema": {
                "type": "string"
              },
              "required": false
            },
            {
              "in": "query",
              "name": "count",
              "schema": {
                "type": "number"
              },
              "required": false
            }
          ],
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Calculation"
                  },
                  "example": {
                    "category": "transport",
                    "action": "train",
                    "option": "TGV INOUI",
                    "count": 250,
                    "co2e": 750
                  }
                }
              }
            },
            "400": {
