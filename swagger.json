        "get": {
          "tags": [
            "calculation"
          ],
          "parameters": [
            {
              "in": "query",
              "name": "category",
              "schema": {
                "type": "string"
              },
              "required": true
            },
            {
              "in": "query",
              "name": "action",
              "schema": {
                "type": "string"
              },
              "required": true
            },
            {
              "in": "query",
